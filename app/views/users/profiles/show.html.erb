<div class="profile-show container text-center">
  <div class="row justify-content-center">
    <div class="col-2">
      <%= render "shared/frontend/user_avatar", user: @user %>
    </div>

    <div class="col-12">
      <div class="row justify-content-center" data-controller="follow" data-follow-user="<%= @user.username %>">
        <p class="text-center h3">
          <button class="follow-btn btn main-button txt", data-action="follow#followship">
            <% if @user.followed_by?(current_user) %>
              Following
            <% else %>
              Follow
            <% end %>
          </button>
        </p>
      </div>
    </div>

    <div class="col-12 h3 txt"><%= @user.name %></div>
    <div class="col-12 h3 txt"><%= @user.about %></div>
   
    <%# 出版過的書 %>
    <div>
      <h3 class="col-12 title">Published Books</h3>
      <% @user.pub_books.each do |book| %>
        <div class="col-12">
          <%= render partial: "shared/frontend/book_cover", locals: {book: book, size: :small} %>
          <%= book.title %>
          <%= book.authors[0].name %>
        </div>
      <% end %>
    </div>
  </div>
</div>
