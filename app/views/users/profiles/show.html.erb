<div class="profile-show container">
  <div class="row d-flex justify-content-center">
    <div class="col-2">
      <div class="square-img border rounded-circle">
        <%# if has_avatar?(@user) %>
          <%#= image_tag @user.avatar_url, class: "w-100 position-absolute" %>
        <%# else %>
          <img src="https://www.nicepng.com/png/full/136-1366211_group-of-10-guys-login-user-icon-png.png" class="w-100 position-absolute">
        <%# end %>
      </div>
    </div>
  </div>
  
  <div class="container">
    <div class="row justify-content-center">
      <p class="col-12 text-center h3"><%= @user.name %></p>
    </div>
  
    <div class="row justify-content-center">
      <p class="col-2 text-center h3"><%= @user.about %></p>
    </div>
  
    <h3 class="text-center">Published Books</h3>
    <div class="row justify-content-center">
      <% @user.pub_books.each do |book| %>
        <div class="col-2">
          <%# if book.cover_data %>
            <%#= image_tag book.cover_url %>
          <%# else %>
            <img class="w-100" src="https://picsum.photos/200/250/?random=<%= rand(100) %>">
          <%# end %>
          <%= book.title %>
          <%= book.authors[0].name %>
        </div>
      <% end %>
    </div>
  </div>
</div>

