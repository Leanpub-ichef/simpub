<div class="profile-show container text-center">
  <div class="row justify-content-center">
    <div class="col-2">
      <%= render "shared/frontend/user_avatar", user: @user %>
    </div>
    <div class="Auther-info ">
      <div class="col-12 h3 txt"><%= @user.name %></div>
      <div class="col-12 h3 txt"><%= @user.about %></div>
    </div>
    <div class="col-12">
      <div class="row justify-content-center" data-controller="follow" data-follow-user="<%= @user.username %>">
        <p class="text-center h3">
          <button class="follow-btn btn btn-danger main-btn txt", data-action="follow#followship">
            <% if @user.followed_by?(current_user) %>
              Following
            <% else %>
              Follow
            <% end %>
          </button>
        </p>
      </div>
    </div>
    

   
    <%# 出版過的書 %>
    <div class="row m-0 d-flex">
      <h3 class="col-12 title">Published Books</h3>
      <% @user.pub_books.each do |book| %>
        <div class="book-item col-6 col-sm-4 col-md-3 col-lg-2 d-flex flex-column justify-content-between">
          <%= render partial: "shared/frontend/book_cover", locals: {book: book, size: :small} %>
          <h4><%= book.title %></h4>
          <div>
            <%= book.authors[0].name %>
          </div>
        </div>
      <% end %>
    </div>

    <%# 編輯個人資料 %>
    <div class="col-12">
      <%= link_to "Edit Profile", user_dashboard_path, class:"txt" %>
    </div>
    
  </div>
</div>
