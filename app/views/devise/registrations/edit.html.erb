<h1 class="text-center">Edit Profile</h1>

<section class="edit-profile container d-flex justify-content-center my-5">
  <div class="card col-12 col-md-10">
    <div class="card-body">
      <div class="e-profile position-relative" data-controller="avatar">
        <div class="row">
          <div class="col d-flex justify-content-center">
            <%= form_for(resource, as: resource_name, url: user_registration_path, method: :patch) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
            
              <div class="mb-3" style="width:160px">
                <div class="pb-3" class="w-100">
                  <div class="square-img border rounded-circle" id="avatar-preview" data-target="avatar.show">
                    <%= render "shared/frontend/user_avatar", user: resource %>
                  </div>
                </div>
              </div>
          </div>
        </div>

        <%= f.hidden_field :avatar, value: current_user.cached_avatar_data %>
        <%= f.file_field :avatar, id: "avatar-input", class: "img-reader", accept: "image/*", data: {target: "avatar.img_reader"} %>
        <div class="cropper-wrap x border position-absolute" data-target="avatar.wrap">
          <div class="cropper-container cropper-bg d-flex">
            <img id="crop-img" data-target="avatar.crop_img">
          </div>
          <div class="preview p-4 flex-grow-1">
            <div class="preview-box text-center m-auto" data-target="avatar.preview_box"></div>
            <div class="crop-btn btn btn-primary" data-target="avatar.crop">確認</div>
          </div>
        </div>
        <%= f.hidden_field :x, id:"dataX", data: {target: "avatar.x"} %>
        <%= f.hidden_field :y, id:"dataY", data: {target: "avatar.y"} %>
        <%= f.hidden_field :width, id:"dataWidth", data: {target: "avatar.width"} %>
        <%= f.hidden_field :height, id:"dataHeight", data: {target: "avatar.height"} %>

        <ul class="nav nav-tabs mt-3">
          <li class="nav-item"><a href="" class="active nav-link">Settings</a></li>
        </ul>

        <div class="tab-content pt-3">
          <div class="tab-pane active">
              
            <div class="row">
              <div class="col-12">
                <div class="row">
                  <div class="col-12">
                    <div class="form-group">
                      <%= f.label :name, "Full NAME" %><br>
                      <%= f.text_field :name, autofocus: true, class:"form-control" %>
                    </div>
                  </div>
                  <div class="col">
                    <div class="form-group">
                      <%= f.label :username, "USERNAME" %><br>
                      <%= f.text_field :username, class:"form-control" %>
                    </div>
                  </div>
                </div>
                    
                <div class="row">
                  <div class="col">
                    <div class="form-group">
                      <%= f.label :email, "EMAIL" %><br>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email",  class:"form-control" %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col">
                    <div class="form-group">
                      <%= f.label :about, "ABOUT YOU" %><br>
                      <%= f.text_area :about, class:"form-control" %>
                    </div>
                  </div>
                </div>

                <!-- checkbox 暫時沒有功能，先做畫面
                <div class="row">
                  <div class="col">
                    <div class="form-group">
                      <input type="checkbox" name="" id="public-profile">
                      <label for="public-profile">Show public profile</label>
                    </div>
                  </div>
                </div>
                -->

                <div class="row">
                  <div class="col-12">
                    <div class="form-group">
                      <%= f.label :facebook, "FACEBOOK" %>
                      <span>facebook.com/</span>
                      <%= f.text_field :facebook, id: "facebook-username", class: "form-control" %>
                    </div>
                  </div>

                  <div class="col-12">
                    <div class="form-group">
                      <%= f.label :github, "GITHUB USERNAME" %>
                      <span>github.com/</span>
                      <%= f.text_field :github, id: "github-username", class: "form-control" %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col">
                    <div class="form-group">
                      <%= f.label :password, "NEW PASSWORD" %><br>
                      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
                      <% if @minimum_password_length %>
                        <em><%= @minimum_password_length %> characters minimum</em>
                      <% end %>
                    </div>
                  </div>
                </div>

                <div class="d-flex justify-content-end mb-3">
                  <%= f.submit "Save Settings", class:"mainbtn btn" %>
                </div>

              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
