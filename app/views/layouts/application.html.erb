<!DOCTYPE html>
<html>
	<head>
		<title>Simpub</title>
		<%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
		<nav class="navbar navbar-dark bg-dark">
      <a  href="/" class="navbar-brand">Simpub</a>
      <a  href="#" class="navbar-text mx-2 text-light">Books</a>
      <a  href="#" class="navbar-text mx-2 text-light">Library</a>
      <a  href="#" class="navbar-text mx-2 text-light">Purchase</a>
      <a  href="#" class="navbar-text mx-2 text-light">Create a Books</a>
      <a  href="#" class="navbar-text mx-2 text-light">My Writings</a>
      <form class="form-inline ml-auto">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
      </form>
      <div class="mx-2 d-flex flex-row">
        <a href="#">
          <i class="text-white mg-auto mx-2 fas fa-shopping-cart"></i>
        </a>
        <% if user_signed_in? %>
          <a href="#">
            <i class="text-white mg-auto mx-2 fas fa-heart"></i>
          </a>
          <a href="#">
            <i class="text-white mg-auto mx-2 fas fa-bell"></i>
          </a>
        <% else %>
          <%= link_to 'Sign up', new_user_registration_path ,class: 'mx-2 text-light' %>
          <%= link_to 'Sign in', new_user_session_path ,class: 'mx-2 text-light'%>
        <% end %>
      </div>
      <% if user_signed_in?  %>
        <div class="fix-down">
          <nav class="navbar navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          </nav>
        </div>
      <% end %>
    </nav>
    <div class="collapse position-absolute ml-auto" id="navbarToggleExternalContent">
      <div class="bg-dark px-4 py-1 ml-auto col-2 fixed-top" style="margin-top:72px">
        <div class="row mx-auto align-items-center">
          <div style="width: 40px;heigth:40px; ">
            <img style="width: 100%;" src="https://www.nicepng.com/png/full/136-1366211_group-of-10-guys-login-user-icon-png.png" alt="">
          </div>
          <div>
          <p class="text-light my-0 px-2">user name</p> 
          <p class="text-light my-0 px-2">user email</p> 
          </div>
        </div>
        <div class="py-2">
          <%= link_to "Create a Book", :new_book, class: "text-white" %>
        </div>
        <div class="py-2"><a class="text-white" href="#">My Writings</a></div>
        <div class="py-2"><a class="text-white" href="#">Edit Profile</a></div>
        <div class="py-2">
          <%= link_to "Sign Out", :destroy_user_session, method: :delete, class: "text-white"%>
        </div>
      </div>
    </div>
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
		<%= yield %>
	</body>
</html>
