<div class="cart-modal x" data-controller="modal" data-target="modal.body">
  <div class="modal-content">
    <div class="col-lg-6 mx-auto">
      <div class="modal-header">
        <h3 class="modal-title">Edit Purchase</h3>
        <button type="button" class="close" data-dismiss="modal" data-action="modal#close" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <div class="modal-body">
        <div class="row">
          <!-- 書本封面 -->
          <div class="col-4">
            <div class="modal-body-img"></div>
            <div class="modal-body-title"></div>
            <div class="modal-body-author"></div>
          </div>
  
          <div class="col-8">
            <!-- Slider -->
            <!-- 最大最小價格 -->
            <div class="d-flex book-price">
              <div class="mr-3">
                <p class="modal-min text-center mb-0"></p>
                <p>MINIMUM PRICE</p>
              </div>
              <div>
                <p class="modal-max text-center mb-0"></p>
                <p>SUGGESTED PRICE</p>
              </div>
            </div>
  
            <!-- Slider -->
            <div class="slider mb-4">
              <p class="mb-1">YOU PAY</p>
              <div class="user-pay d-flex">
                <div class="user-pay-box">
                  <span class="modal-user-pay-show">$</span>
                </div>
                <input id="modal-user-pay" class="w-100 mb-3" type="range" step="0.01">
              </div>
  
              <p class="mb-1">AUTHOR EARNS</p>
              <div class="author-earns d-flex">
                <div class="author-earns-box">
                  <span class="modal-author-earns-show">$</span>
                </div>
                <input id="moadl-author-earns" class="w-100" type="range" step="0.01">
              </div>
            </div>
  
            <!-- 更新價格按鈕 -->
            <div class="update-price mt-auto">
              <span>YOU PAY</span>
              <span class="hint">(US$)</span>
              <%= form_with url: cart_path, method: :patch, class: "update-price-form", data: {action: "modal#update", target: "modal.update_form"} do |f| %>
                <%= f.text_field :cart_price, id: "modal-cart-price", class: "modal-cart-price text-center d-block mt-1 mb-4", data: {target: "modal.price"} %>
                <%= f.submit "Update", class: "update-btn btn btn-danger main-btn", data: {target: "modal.update_btn"} %>
                <button class="cart-wait-btn btn btn-danger main-btn x" disabled data-target="modal.cart_wait">Please wait...</button>
              <% end %>
            </div>

            <!-- 加入購物車按鈕 -->
            <div class="add-to-cart-price mt-auto">
              <span>YOU PAY</span>
              <span class="hint">(US$)</span>
              <%= form_with url: "#", class: "add-cart-form-modal" do |f| %>
                <%= f.text_field :cart_price, id: "cart-price-modal", class: "cart-price text-center mt-1 mb-4" %>
                <div>
                  <%= f.submit "Add Ebook to Cart", id: "wish-to-cart", class: "add-to-cart-btn btn btn-danger main-btn" %>
                </div>
                <button class="wish-wait-btn btn btn-danger main-btn x" disabled>Please wait...</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>