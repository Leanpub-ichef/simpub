

<div class="show container">
	<div class="row">
		<div class="col-4 d-flex flex-column">
      <!-- 書本標題 -->
      <h2 class="title h1">
        <%= @book.title %>
      </h2>

      <div class="d-flex align-items-center mb-2">
        <!-- 書籍作者頭像 -->
        <div class="book-show-author-avatar">
          <% if has_avatar?(@book.authors[0]) %>
            <%= image_tag @book.authors[0].avatar_url, class: "w-100" %>
          <% else %>
            <img src="https://www.nicepng.com/png/full/136-1366211_group-of-10-guys-login-user-icon-png.png" alt="" class="w-100">
          <% end %>
        </div>
        <!-- 作者名稱 -->
        <div class="book-show-author-name pl-3">
          <%= link_to link_to @book.authors[0].name, profile_path(@book.authors[0].username) r%>
        </div>
      </div>

      <!-- 關於此書 -->
      <div class="mb-5">
        <% if @book.about %>
          <%= @book.about %>
        <% else %>
          <p>
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Fuga enim vitae, consequuntur asperiores, itaque beatae maxime cumque sapiente quae eius odit, autem corrupti quos ipsa amet non iusto eveniet expedita?
          </p>
        <% end %>
      </div>

      <div class="tags mb-3 d-flex">
        <% @book.tag_items.each do |tag| %>
          <span>#<%= tag %></span>
        <% end %>
      </div>

      <div class="tags mb-3 d-flex">
        <% @book.tag_items.each do |tag| %>
          <span>#<%= tag %></span>
        <% end %>
      </div>
      
			<div class="button-group">
        <%= link_to "#", class: "btn w-50 p-1 mb-2" do %>
          <span class="mr-2">Read Free Sample</span><i class="far fa-file-pdf"></i>
        <% end %> 
        <%= link_to "#", class: "btn w-50 p-1" do %>
          <span class="mr-2">Table Of Contents</span><i class="fas fa-list-ol"></i>
        <% end %>
			</div>
		</div>
    
    <!-- 書籍封面 -->
		<div class="cover col-4">
      <div class="mb-2">
        <% if has_cover?(@book) %>
          <%= image_tag @book.cover(:large).url, class: "w-100" %>
        <% else %>
          <img class="w-100" src="https://picsum.photos/400/600/?random=<%= rand(100) %>">
        <% end %>
      </div>
      <div class="completeness">
        <div class="progress mx-auto mb-2"></div>
        <p class="text-center mb-0">This book is 100% complete</p>
        <p class="text-center">COMPLETED ON <%= @book.updated_at.to_date %></p>
      </div>
		</div>

		<div class="col-4 d-flex flex-column">
      <!-- 最大最小價格 -->
      <div class="d-flex book-price">
        <div class="mr-3">
          <p class="text-center mb-0">$<%= @book.price %></p>
          <p>MINIMUM PRICE</p>
        </div>
        <div>
          <p class="text-center mb-0">$<%= @book.price * 2 %></p>
          <p>SUGGESTED PRICE</p>
        </div>
      </div>
      
      <!-- Slider -->
			<div class="slider mb-4">
        <p class="mb-1">YOU PAY</p>
        <input type="range" min="<%= @book.price %>" max="<%= @book.price * 3 %>" class="w-100 mb-3">
        <p class="mb-1">AUTHOR EARNS</p>
        <input type="range" min="<%= @book.price %>" max="<%= @book.price * 3 %>" value="<%= @book.price * 2 %>" class="w-100">
      </div>

      <div class="add-to-cart-price mb-4">
        <span>YOU PAY</span>
        <span class="hint">(US$)</span>
        <div class="cart-price text-center mt-1 mb-4">$<%= @book.price %></div>
        <%= link_to "Add Ebook to Cart", add_cart_path(@book), method: :post, class: "add-to-cart-btn btn-danger main-button" %>
      </div>

      <%# <%= link_to "Add to Wish List", "#", class: "add-to-wishlist" %>
		</div>
	</div>
</div>

