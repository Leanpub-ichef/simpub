<div class="book-index container">
	<form class="form-inline d-flex justify-content-center md-form form-sm mt-0 my-6 mb-5">
		<i class="fas fa-search" aria-hidden="true"></i>
		<input
			class="form-control form-control-sm ml-3 w-75"
			type="text"
			placeholder="Search"
			aria-label="Search"
		/>
	</form>

	<div class="row books-show">
		<% @books.each do |book| %>
			<!-- 調整 RWD -->
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 border-black mt-8 p-3">
				<div class="cover">
					<% if has_cover?(book) %>
						<%= image_tag book.cover_url(:small), class: "w-100" %>
					<% else %>
						<%= image_pack_tag "open_book_cover.jpeg", class: "w-100" %>
					<% end %>
				</div>
				<div>
					<h2 class="book-title"><%= book.title%></h3>
				</div>
				<div>
					<p class="book-author"><%= link_to book.authors[0].name, profile_path(book.authors[0].username) %></p>
				</div>
			</div>
			<%# <%= link_to "加到購物車", add_cart_path(book), method: "post", class:
			<%# "btn btn-xs bg-blue-900 text-white"%>    
		</div>

		<% end %>
	</div>

	<%= paginate @books %>
</div>

