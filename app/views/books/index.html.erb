<div class="container">
	<form
		class="form-inline d-flex justify-content-center md-form form-sm mt-0 my-6"
	>
		<i class="fas fa-search" aria-hidden="true"></i>
		<input
			class="form-control form-control-sm ml-3 w-75"
			type="text"
			placeholder="Search"
			aria-label="Search"
		/>
	</form>
	<div class="row books-show">
		<% @books.each do |book| %>
		<div class="col-2 border-black mt-8 p-3">
			<div class="cover">
				<% if book.cover_data %><%= image_tag book.cover_url(:small), class:
				"w-100" %> <% else %>
				<img
					class="w-100"
					src="https://picsum.photos/200/250/?random=<%= rand(100) %>"
				/>
				<% end %>
			</div>
			<%# <%= link_to "加到購物車", add_cart_path(book), method: "post", class:
			"btn btn-xs bg-blue-900 text-white"> # 建議移到商品頁 %>
			<div class="book-title h-10 mt-2">
				<h2 class="text-sm font-semibold"><%= book.title%></h3>
			</div>
			<div class="book-author d-flex">
				<p class="text-xs"><%= link_to book.authors[0].name, profile_path(book.authors[0].username) %></p>
			</div>
		</div>
		<% end %>
	</div>
</div>
