<div class="book-index container">
	<%= form_with(url: :search_books, method: :get, class: "book-search form-inline d-flex justify-content-center md-form form-sm mt-5 mb-5", local: true) do |f| %>
		<i class="fas fa-search mr-2" aria-hidden="true"></i>
		<%= f.search_field :search, class: "book-search-input form-control-sm  w-75 rounded-left", placeholder: "Search" %>
	<% end %>

	<div class="row books-show">
		<% @books.each do |book| %>
			<!-- 調整 RWD -->
			<div class="col-6 col-sm-4 col-md-3 col-lg-2 mt-8 p-3 book-item">
				<%# <%= link_to add_cart_path(book), method: :post do %>
				<%# <i class="fas fa-cart-plus fa-2x"></i> %>
				<%# <% end %>
				<div class="cover">
					<%= link_to book_path(book) do %>
						<div class="w-100">
							<%= render "shared/frontend/book_cover", locals: {book: book, size: :small} %>
						</div>
					<% end %>
				</div>
				<div class="book-info">
					<div class="d-flex flex-column">
						<%= link_to book.title, book_path(book), class: "book-title" %>
						<%= link_to book.authors[0].name, profile_path(book.authors[0].username), class: "book-author" %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
	
	<div class="paginate" >
		<%= paginate @books %>
	</div>
</div>



<template>
  <div class="col-6 col-sm-4 col-md-3 col-lg-2 mt-8 p-3">
    <div class="cover">
			<div class="w-100">
				<a href="">
					<img src="" alt="" class="w-100">
				</a>
			</div>
    </div>
    <div class="d-flex flex-column">
			<a href="" class="book-title"></a>
			<a href="" class="book-author"></a>
    </div>
  </div>
</template>
